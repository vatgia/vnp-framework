{
  "name": "vatgia/vatgia",
  "description": "Vật Giá Framework.",
  "keywords": [
    "framework",
    "vatgia"
  ],
  "license": "MIT",
  "type": "project",
  "repositories": [
    {
      "type": "path",
      "url": "libraries/**/**/"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "vatgia/framework": "@dev",
    "vatgia/core": "@dev",
    "vatgia/helpers": "@dev",
    "vatgia/model": "@dev",
    "firebase/php-jwt": "^4.0"
  },
  "require-dev": {
    "maximebf/debugbar": "^1.13",
    "filp/whoops": "^2.1",
    "phpunit/phpunit": "5.5.*",
    "fzaninotto/faker": "^1.6"
  },
  "autoload": {
    "classmap": [

    ],
    "psr-4": {
      "App\\": "app",
      "AppView\\": "appview"
    },

    "files": [
      "appview/helpers/include.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
    ]
  },
  "scripts": {
    "post-root-package-install": [
    ],
    "post-create-project-cmd": [
    ],
    "post-install-cmd": [
      "php -r \"copy('.env.sample', '.env');\""
    ],
    "post-update-cmd": [
    ],
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "php vendor/bin/phpunit",
    "phpcs": "php vendor/bin/phpcs"
  },
  "config": {
    "process-timeout":  1200,
    "preferred-install": "dist"
  }
}
